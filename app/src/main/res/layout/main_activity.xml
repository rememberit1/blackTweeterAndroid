<com.blacktweeter.android.twitter.views.NotificationDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" />


        <View
            android:id="@+id/activity_status_bar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@android:color/black"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/send_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="100dp"
            android:background="?background_card"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/send_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:background="@drawable/pressed_toast"
                android:contentDescription="New Tweet"
                android:maxWidth="48dp"
                android:maxHeight="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="6dp"
                android:paddingRight="10dp"
                android:scaleType="fitCenter"
                android:src="?sendButton" />

        </LinearLayout>

    </RelativeLayout>


    <!-- The navigation drawer -->
    <include
        android:id="@+id/left_drawer"
        layout="@layout/main_drawer"
        android:layout_width="@dimen/drawer_size_port"
        android:layout_height="match_parent"
        android:layout_gravity="left">

    </include>

    <include
        android:id="@+id/right_drawer"
        layout="@layout/notification_drawer"
        android:layout_width="@dimen/drawer_size_port"
        android:layout_height="match_parent"
        android:layout_gravity="right" />

</com.blacktweeter.android.twitter.views.NotificationDrawerLayout>